{{>layout/header}}

<h1>사용자 등록</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">기도유형</label>
                <input type="text" class="form-control" id="prayType" placeholder="기도유형">
            </div>
            <div class="form-group">
                <label for="author">기도제목</label>
                <input type="text" class="form-control" id="prayTitle" placeholder="기도제목">
            </div>
            <div class="form-group">
                <label for="content">기도내용</label>
                <textarea class="form-control" id="prayContent" placeholder="기도내용을 입력하세요"></textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">기도목록</a>
        <button type="button" class="btn btn-primary" id="btn-pray-save">등록</button>
    </div>
</div>
